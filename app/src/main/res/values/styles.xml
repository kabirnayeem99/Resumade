<resources>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:radius">20dp</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialog</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.Material3.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="background">@color/white</item>
        <item name="colorAccent">?android:colorPrimary</item>
    </style>

    <style name="MyTabLayout" parent="Widget.Material3.TabLayout">

    </style>

    <style name="MyAddFab" parent="Widget.Material3.FloatingActionButton.Primary" />

    <style name="MyAlertDialog" parent="MaterialAlertDialog.Material3" />

    <style name="helper_text_appearance" parent="@android:style/TextAppearance" />

    <color name="white">#ffffff</color>
</resources>
